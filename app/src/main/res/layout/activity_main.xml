<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.MainActivity">

        <LinearLayout
            android:id="@+id/title_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_corner_white"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/logo" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/dancing_script"
                android:text="Infinity English"
                android:textColor="@color/colorPrimary2"
                android:textSize="30dp"
                android:textStyle="bold" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_group">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/search"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/round_corner_white"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/note"
                        app:layout_constraintTop_toBottomOf="@id/user_avatar">

                        <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/search_gif"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/search" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/search_gif"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="Search"
                            android:textSize="23dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/note"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/round_corner_white"
                        app:layout_constraintLeft_toRightOf="@id/search"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/search">

                        <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/note_gif"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/notebook" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/note_gif"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="Notes"
                            android:textSize="23dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/history"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/round_corner_white"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/random"
                        app:layout_constraintTop_toBottomOf="@id/search">

                        <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/history_gif"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/history" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/history_gif"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="History"
                            android:textSize="23dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/random"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/round_corner_white"
                        app:layout_constraintLeft_toRightOf="@id/history"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/note">

                        <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/random_gif"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/random" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/random_gif"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="Random"
                            android:textSize="23dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/speak"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/round_corner_white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/pronunciation_guide"
                        app:layout_constraintTop_toBottomOf="@id/history">

                        <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/speak_gif"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/microphone" />

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/speak_gif"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="Practice"
                            android:textSize="23dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/pronunciation_guide"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/round_corner_white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/speak"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/random">

                        <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/pronunciation_gif"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/document" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/pronunciation_gif"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="Pronunciation"
                            android:textSize="23dp" />

                    </RelativeLayout>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_avatar"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/avatar"
                        app:layout_constraintBottom_toTopOf="@id/search"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginEnd="20dp"
                        android:text="Hello !!!"
                        android:textColor="@color/colorPrimary2"
                        android:textSize="30dp"
                        android:textStyle="bold|italic"
                        app:layout_constraintBottom_toBottomOf="@id/user_avatar"
                        app:layout_constraintLeft_toRightOf="@id/user_avatar"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/user_avatar" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>